name: Publish Package

on:
  push:
    branches:
      - main

jobs:
  publish:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Check for changes in package.json
        id: package-changes
        run: |
          if [ -n "$(git diff --name-only ${{ github.event.before }} ${{ github.sha }} | grep 'package.json')" ]; then
            echo "::set-output name=changes::true"
          else
            echo "::set-output name=changes::false"
          fi
        shell: bash

      - name: Setup Node
        uses: actions/setup-node@v2
        with:
          node-version: '16'

      - name: Publish Package
        if: steps.package-changes.outputs.changes == 'true'
        run: npm publish
        env:
          NODE_AUTH_TOKEN: ${{ secrets.NPM_AUTH_TOKEN }}
